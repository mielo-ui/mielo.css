{
  "name": "@mielo-ui/mielo",
  "version": "0.1.0",
  "description": "Mielo UI - scss based components library inspired by LibAdwaita",
  "main": "mielo.scss",
  "unpkg": "css/mielo.css",
  "style": "css/mielo.min.css",
  "author": "Anton Shramko <antonshramko@yandex.ru>",
  "repository": {
    "url": "https://github.com/mielo-ui/mielo"
  },
  "license": "MIT",
  "private": false,
  "bugs": {
    "url": "https://github.com/mielo-ui/mielo/issues"
  },
  "keywords": [
    "gnome",
    "adwaita",
    "web",
    "mielo.ui",
    "css",
    "sass",
    "scss",
    "flexbox",
    "grid",
    "responsive",
    "framework"
  ],
  "files": [
    "css",
    "sass",
    "mielo.scss",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "pretty": "prettier 'sass/**/*.{scss,css}' --write",
    "lint": "stylelint 'sass/**/*.scss' --fix",
    "fmt": "npm run pretty && npm run lint",
    "build-mielo": "sass --load-path=node_modules --quiet-deps --silence-deprecation=css-function-mixin,new-global --style=expanded --source-map mielo.scss css/mielo.css",
    "minify-mielo": "postcss css/mielo.css --no-map --use cssnano --output css/mielo.min.css",
    "build-all": "npm run build-mielo && npm run minify-mielo",
    "clean": "rimraf css",
    "build": "npm run clean && npm run build-all"
  },
  "devDependencies": {
    "reseter.css": "^2.0.0",
    "sassdash": "^0.9.0",
    "copyfiles": "^2.4.1",
    "cssnano": "^7.0.4",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.77.8",
    "stylelint": "^16.7.0",
    "stylelint-scss": "^6.4.1"
  }
}
